<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".GalleryFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#000"
        android:id="@+id/imageView"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_image_24"
            android:drawableTint="@color/darkgreen"
            android:backgroundTint="@color/white"
            android:text="Select Image"
            android:textColor="@color/darkgreen"
            android:layout_marginTop="515dp"
            android:id="@+id/selectBtn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/coconut_svgrepo_com"
            android:backgroundTint="@color/teagreen"
            android:textColor="@color/darkgreen"
            android:layout_marginTop="515dp"
            android:text="Predict Image"
            android:id="@+id/predictBtn"/>

    </LinearLayout>







</FrameLayout>