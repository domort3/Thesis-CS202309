<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".MaturityFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="80dp"
        android:src="@drawable/maturitylevel" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMaturity"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"/>

    <LinearLayout
        android:id="@+id/dotIndictorMaturity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="24dp"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Pre-mature coconuts are tiny, unripe, green coconuts lacking of maturity.\n\nMature coconuts are edible coconuts with firm flesh and sweet water.\n\n Overmature coconuts are aged and dried coconuts with tough husk and possible spoiled contents."
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:textColor="@color/darkgreen"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="left"/>




</FrameLayout>