<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="630dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Research &amp; Objective"
            android:textColor="@color/darkgreen"
            android:layout_marginBottom="40dp"
            android:textStyle="bold"
            android:textSize="36dp"/>

        <ImageView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:src="@drawable/separator"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="The primary goal of this application is to modernize the traditional system of assessing the maturity level of coconuts. By utilizing advanced technology, the app allows users to objectively evaluate a coconutâ€™s maturity level through image scanning. Using a classification model, the app determines if the coconut is premature, mature, or overmature based on pictures of split-open coconuts."
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/dialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/darkgreen"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/teagreen"/>


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>