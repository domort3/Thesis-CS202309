<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".HelpFragment">

    <!-- TODO: Update blank fragment layout -->
    
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:padding="16dp"/>

    <LinearLayout
        android:id="@+id/dotIndictor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="16dp"
        android:visibility="visible"/>

    
    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="The application camera can only accept the pictures that are taken in the correct format. The picture with a check is the ideal format for taking the picture"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="470dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="left"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="@color/teagreen"
        android:textColor="@color/darkgreen"
        android:textStyle="bold"
        android:text="Maturity Levels" />


</FrameLayout>